#ifndef Tim_SepakBola
#define Tim_SepakBola

#include <string>
using std::string;

class TimSepakBola
{
public:
   static const int MAX_SIZE = 30;

   TimSepakBola(int = 0, string = "",
      string = "", double = 0.0);
   ~TimSepakBola();

   void setNamaTim(string);
   void setNegaraAsal(string);
   void setTahunBerdiri(double);
   void setNamaPemain(string);

   string getNamaTim() const;
   string getNegaraAsal() const;
   int getTahunBerdiri() const;
   string getNamaPemain() const;
};

#endif  // Tim_SepakBola
